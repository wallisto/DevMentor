<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="Control" x:Key="Base">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="BaseTextBlock">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>
    <Style TargetType="Button" BasedOn="{StaticResource Base}">
        <Setter Property="FontSize" Value="14"/>
    </Style>
    <Style TargetType="ComboBox" BasedOn="{StaticResource Base}">
        
    </Style>
    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlock}" x:Key="Labels">
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
    <Style TargetType="Border">
        <Setter Property="Padding" Value="5"/>
    </Style>
</ResourceDictionary>