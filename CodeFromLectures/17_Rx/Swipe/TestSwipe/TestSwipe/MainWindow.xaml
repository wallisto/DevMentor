<Window x:Class="TestSwipe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock>Number</TextBlock>
        <TextBlock Grid.Row="1">Name</TextBlock>
        <TextBlock Grid.Row="2">Month</TextBlock>
        <TextBlock Grid.Row="3">Year</TextBlock>

        <TextBlock x:Name="number" Grid.Column="1"/>
        <TextBlock x:Name="name" Grid.Row="1" Grid.Column="1"/>
        <TextBlock x:Name="month" Grid.Row="2" Grid.Column="1"/>
        <TextBlock x:Name="year" Grid.Row="3" Grid.Column="1"/>
    </Grid>
</Window>
